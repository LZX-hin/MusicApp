/* 头部 */

.header {
  position: relative;
  height: 200px;
  width: 100%;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
    background-blend-mode: color-dodge;
  background-color: rgba(1, 1, 1, 0.4);
}

.header .title {
  position: absolute;
  width: 70%;
  height: 30px;
  line-height: 30px;
  top:85px;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  font-size: 24px;
  color: #fff;
}

.header .desc {
  position: absolute;
  top: 140px;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  text-align: center;
  height: 20px;
  line-height: 20px;
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  color: #ccc;
}

/* 按钮 */
.btn{
  width: 100%;
  line-height: 40px;
}
.btn .song-list{
  width: 50%;
  height: 40px;
  float: left;
  text-align: center;
  font-size: 16px;
}

.btn .album{
  width: 50%;
  height: 40px;
  float: left;
  text-align: center;
  font-size: 16px;
}

.btn .active{
  color: #69c3aa;
}

/* 歌曲列表 */

.list {
  padding-top: 20px;
  background-color: #fafafa;
}

.list .item {
  margin-top: 22px;
  margin-bottom: 22px;
}
.list .item:nth-child(1){
  margin-top: 0;
}

.list .item .no {
  float: left;
  width: 7%;
  margin-top: 10px;
  text-align: center;
  font-weight: bold;
}

.list .item .profile {
  float: left;
  width: 80%;
  margin-left: 3%;
}

.list .item .icon {
  float: right;
  width: 10%;
  margin-top: 6px;
  /* height: 20px; */
}

.list .item .icon icon {
  font-size: 24px;
  color: #69c3aa;
}

.list .item .profile .song-name {
  font-weight: bold;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list .item .profile .others {
}

.list .item .profile .others .tag {
  width: 16px;
  height: 10px;
  margin-top: 7px;
  margin-right: 5px;
  line-height: 10px;
  float: left;
  font-size: 8px;
  color: orange;
  border: 1px solid orange;
  border-radius: 4px;
  text-align: center;
  letter-spacing: 1px;
}

.list .item .profile .others .hq {
  color: green;
  border: 1px solid green;
}

.list .item .profile .others .singer {
  float: left;
  width: auto;
  height: 16px;
  background-color: #fff;
  margin-top: 5px;
  /* margin-left: 5px; */
  font-size: 12px;
  color: darkgrey;
}

/* 专辑列表 */
.album-list .list .item{
  margin-top: 10px;
}
.album-list .list .item .pic{
  float: left;
width: 80px;
height: 80px;
border-radius: 10px;
overflow: hidden;
}
.album-list .list .item .pic image{
  width: 100%;
  height: 100%;
}
.album-list .list .item .song-msg{
  float: left;
  width: 60%;
  overflow: hidden;
  margin-left: 10px;
  font-size: 16px;
}
.album-list .list .item .song-msg .song-name{
  font-size: 16px;
  font-weight: bold;
  margin-top: 16px;
  margin-bottom: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.album-list .list .item .song-msg .singer view{
  float: left;
  font-size: 12px;
  color: #ccc;
}
.album-list .list .item .enter{
  float: right;
  margin-top: 24px;
}