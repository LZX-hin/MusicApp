}

/* 下载收藏分享 */

.download-collect-share {
  position: relative;
  width: 100%;
  height: 80px;
  /* background-color: red; */
  margin: 0 auto 0;
}

.download {
  float: left;
}

.collect {
  float: right;
}

.collect icon.active {
  color: #69c3aa;
}

.download-collect {
  width: 30%;
  height: 50px;
  margin: 0 auto;
}

.download-collect icon {
  font-size: 24px;
  color: #fff;
}

.share {
  color: #fff;
  position: absolute;
  left: 0;
  top: 40px;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 100px;
  height: 20px;
  padding: 3px 13px;
  font-size: 14px;
  border: 1px solid #fff;
  border-radius: 15px;
}

