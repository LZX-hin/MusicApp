.bg {
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
  background-origin: center top;
  background-blend-mode: color-dodge;
  background-color: rgba(1, 1, 1, 0.8);
  transform: scale(1.5);
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  height: 100%;
  z-index: -1;
  filter: blur(5px);
}

.header .song-name {
  margin-top: 20px;
  font-size: 20px;
  text-align: center;
  color: #fff;
  font-weight: bold;
}

.header .singer {
  font-size: 14px;
  text-align: center;
  color: #fff;
}

.poster {
  position: relative;
  width: 200px;
  height: 200px;
  margin: 20px auto 0;
  border-radius: 13px;
  overflow: hidden;
}

.poster .pic {
  width: 200px;
  height: 200px;
}

.poster .pic image {
  width: 100%;
  height: 100%;
}

.poster .play {
  width: 44px;
  height: 44px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -16px;
  margin-top: -22px;
}

.poster .play icon {
  color: white;
  font-size: 40px;
}

.poster .pause {
  width: 44px;
  height: 44px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -16px;
  margin-top: -22px;
}

.poster .pause icon {
  color: white;
  font-size: 40px;
}

/* 歌词 */

.active {
  color: #69c3aa;
}

.lyric {
  width: 70%;
  height: 180px;
  margin: 10px auto 0;
  overflow: hidden;
  color: #fff;
}

.lyric .box {
  height: 170px;
}

.lyric .box .item {
  height: 1000px;
  /* margin-top: -265px; */
  text-align: center;
  transition: all 0.5s linear;
}

.lyric .box .item view {
  margin-top: 10px;
}

.lyric .box .item .single-lyric text {
  height: 20px;
